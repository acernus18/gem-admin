<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.maples.gem.admin.repository.UserMapper">
  <resultMap id="BaseResultMap" type="org.maples.gem.admin.model.User">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="principal" jdbcType="VARCHAR" property="principal" />
    <result column="credential" jdbcType="VARCHAR" property="credential" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="create_time" jdbcType="INTEGER" property="createTime" />
    <result column="update_time" jdbcType="INTEGER" property="updateTime" />
    <result column="last_login_time" jdbcType="INTEGER" property="lastLoginTime" />
  </resultMap>

  <select id="selectCredentialByPrincipal" resultType="java.lang.String">
    select `credential` from `tb_user` where `principal` = '${principal}' and `status` = 0
  </select>

  <select id="selectUserIdByPrincipal" resultType="java.lang.Integer">
    select `id` from `tb_user` where `principal` = '${principal}' and `status` = 0
  </select>
</mapper>